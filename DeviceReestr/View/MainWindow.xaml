<Window x:Class="DeviceReestr.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceReestr.View"
        mc:Ignorable="d"
        Title="Реестр оборудования" Height="800" Width="800" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Добавить устройство" Click="AddDevice_Click"/>
            <MenuItem Header="Список устройств" Click="DeviceList_Click"/>
            <MenuItem Header="Статистика" Click="Statistic_Click"/>
            <MenuItem Header="Закрыть" Click="Close_Click"/>
        </Menu>
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Margin="10">
            
        </Frame>
    </DockPanel>
</Window>
